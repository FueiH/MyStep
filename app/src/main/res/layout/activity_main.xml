<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/main_activity"
    tools:context="com.step.stepcount.stepcount.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="步数检测"
            android:layout_height="wrap_content"
            android:id="@+id/buttonStep"
            android:layout_width="200dp"
            android:layout_gravity="center"
            tools:text="步数检测" />

        <Button
            android:text="运动测量"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSport"
            android:layout_width="200dp"
            android:layout_gravity="center|fill_vertical"
            tools:text="运动测量" />

        <Button
            android:text="跌倒监测"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFall"
            android:layout_width="200dp"
            android:layout_gravity="center"
            tools:text="跌倒监测" />
    </LinearLayout>
</RelativeLayout>
