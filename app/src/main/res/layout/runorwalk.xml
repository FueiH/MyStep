<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/gray"
    android:weightSum="1">

    <GridLayout
        android:layout_width="320dp"
        android:layout_height="536dp">

        <TextView
            android:text="步行"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewStatus1"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="28sp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:text="1m/s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSpeed1"
            android:textSize="28sp"
            android:layout_row="1"
            android:layout_column="1"
            android:textColor="@android:color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewStepNum"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="28sp"
            android:textColor="@android:color/black"
            android:text="已走步数：" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewEnergy"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="28sp"
            android:textColor="@android:color/black"
            android:text="消耗能量：" />

        <TextView
            android:text="运动状态："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewStatus"
            android:textSize="28sp"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="@android:color/black"
            />

        <TextView
            android:text="5卡"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewEnergy1"
            android:layout_row="4"
            android:layout_column="1"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            />

        <TextView
            android:text="--"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewStepNum1"
            android:layout_row="3"
            android:layout_column="1"
            android:textColor="@android:color/black"
            android:textSize="28sp"
             />

        <TextView
            android:text="运动速度："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSpeed"
            android:textSize="28sp"
            android:layout_row="1"
            android:textColor="@android:color/black"
            android:layout_column="0"
            />

        <TextView
            android:text="10m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDistance1"
            android:layout_row="2"
            android:layout_column="1"
            android:textColor="@android:color/black"
            android:textSize="28sp"
             />

        <TextView
            android:text="运动路程："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDistance"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            />
    </GridLayout>

</LinearLayout>
